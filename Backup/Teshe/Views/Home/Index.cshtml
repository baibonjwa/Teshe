    function state(val, row) {
        if (val == "待检") {
            return "<div style=\"color:blue\">待检</div>";
        }
        else if (val == "检测有效期内") {
            return "<div>检测有效期内</div>";
        }
        else if (val == "超期") {
            return "<div style=\"color:red\">超期</div>";
        } else {
            return "<div>" + val + "</div>";
        }
    }
</script>
