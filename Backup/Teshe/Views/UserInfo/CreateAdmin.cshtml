@model Teshe.Models.CreateAdminViewModel

@{
    ViewBag.Title = "创建管理员账号";
}
<link href="~/Content/tablestyle.css" rel="stylesheet" />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <table class="table table-condensed">
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Name)
            </td>
            <td>
                @Html.TextBoxFor(model => model.Name, new { @class = "combo textBoxHeight" })
                @Html.ValidationMessageFor(model => model.Name)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.UserType.Name)
            </td>
            <td>
                @Html.DropDownListFor(model => model.UserType.Name, (List<SelectListItem>)ViewBag.UserTypeList)
                @Html.ValidationMessageFor(model => model.UserType.Name)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Password)
            </td>
            <td>
                @Html.EditorFor(model => model.Password)
                @Html.ValidationMessageFor(model => model.Password)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.RepPassword)
            </td>
            <td>
                @Html.EditorFor(model => model.RepPassword)
                @Html.ValidationMessageFor(model => model.RepPassword)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.ResponsiblePerson)
            </td>
            <td>
                @Html.EditorFor(model => model.ResponsiblePerson)
                @Html.ValidationMessageFor(model => model.ResponsiblePerson)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Company)
            </td>
            <td>
                @Html.EditorFor(model => model.Company)
                @Html.ValidationMessageFor(model => model.Company)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.District)
            </td>
            <td>
                @Html.EditorFor(model => model.District)
                @Html.ValidationMessageFor(model => model.District)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.City)
            </td>
            <td>
                @Html.EditorFor(model => model.City)
                @Html.ValidationMessageFor(model => model.City)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Province)
            </td>
            <td>
                @Html.EditorFor(model => model.Province)
                @Html.ValidationMessageFor(model => model.Province)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Tel)
            </td>
            <td>
                @Html.EditorFor(model => model.Tel)
                @Html.ValidationMessageFor(model => model.Tel)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Email)
            </td>
            <td>
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" value="添加管理员" class="btn btn-default" />
                @UIHelper.ModifyTips(ViewBag.CreateAdminIsSuccess, "添加管理员成功")
            </td>
        </tr>
    </table>
}