@model Teshe.Models.StoppageIndexViewModel

@{
    ViewBag.Title = "查询故障";
}
<script>
    function Search() {
        $("#result").datagrid({
            url: encodeURI("/Stoppage/Search?" + "Name=" + $("#Name").val() + "&Model=" + $("#Model").val() + "&Barcode=" + $("#Barcode").val() + "&Company=" + $("#Company").val() + "&StoppageTime=" + $("#StoppageTime").val() + "&District=" + $("#District").val() + "&City=" + $("#City").val() + "&Province=" + $("#Province").val())
        });
    }

    function formatName(data, row) {
        return row.Device.Name;
    }
    function formatModel(data, row) {
        return row.Device.Model;
    }
    function formatBarcode(data, row) {
        return row.Device.Barcode;
    }
    function formatCompany(data, row) {
        return row.Device.Company;
    }
    function formatDistrict(data, row) {
        return row.Device.District;
    }
    function formatCity(data, row) {
        return row.Device.City;
    }
    function formatProvince(data, row) {
        return row.Device.Province;
    }
</script>
<table>
    <tr>
        <td>
            @Html.DisplayNameFor(model => model.Name)
        </td>
        <td>
            @Html.TextBoxFor(model => model.Name, new { @class = "combo textBoxHeight" })
        </td>
        <td>
            @Html.DisplayNameFor(model => model.Model)
        </td>
        <td>
            @Html.TextBoxFor(model => model.Model, new { @class = "combo textBoxHeight" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.DisplayNameFor(model => model.Barcode)
        </td>
        <td>
            @Html.TextBoxFor(model => model.Barcode, new { @class = "combo textBoxHeight" })
        </td>
        <td>
            @Html.DisplayNameFor(model => model.Company)
        </td>
        <td>
            @Html.TextBoxFor(model => model.Company, new { @class = "combo textBoxHeight" })
        </td>
    </tr>
    @if (User.IsInRole("系统管理员") || User.IsInRole("省级管理员"))
    { 
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.District)
            </td>
            <td>
                @Html.TextBoxFor(model => model.District, new { @class = "combo textBoxHeight" })
            </td>
            <td>
                @Html.DisplayNameFor(model => model.City)
            </td>
            <td>
                @Html.TextBoxFor(model => model.City, new { @class = "combo textBoxHeight" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Province)
            </td>
            <td>
                @Html.TextBoxFor(model => model.Province, new { @class = "combo textBoxHeight" })
            </td>
            <td>
                @Html.DisplayNameFor(model => model.StoppageTime)
            </td>
            <td>
                @Html.TextBoxFor(model => model.StoppageTime, new { onfocus = "WdatePicker()", @class = "combo textBoxHeight" })
            </td>
        </tr>
    }
    else if (User.IsInRole("市级管理员"))
    {
        @Html.HiddenFor(model => model.Province)
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.District)
            </td>
            <td>
                @Html.TextBoxFor(model => model.District, new { @class = "combo textBoxHeight" })
            </td>
            <td>
                @Html.DisplayNameFor(model => model.City)
            </td>
            <td>
                @Html.TextBoxFor(model => model.City, new { @class = "combo textBoxHeight" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.StoppageTime)
            </td>
            <td colspan="3">
                @Html.TextBoxFor(model => model.StoppageTime, new { onfocus = "WdatePicker()", @class = "combo textBoxHeight" })
            </td>
            <td></td>
            <td></td>
        </tr>
    }
    else if (User.IsInRole("区（县）级管理员"))
    {
        @Html.HiddenFor(model => model.Province)
        @Html.HiddenFor(model => model.City)
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.District)
            </td>
            <td>
                @Html.TextBoxFor(model => model.District, new { @class = "combo textBoxHeight" })
            </td>
            <td>
                @Html.DisplayNameFor(model => model.StoppageTime)
            </td>
            <td>
                @Html.TextBoxFor(model => model.StoppageTime, new { onfocus = "WdatePicker()", @class = "combo textBoxHeight" })
            </td>
        </tr>
    }
    else if (User.IsInRole("客户"))
    {
        @Html.HiddenFor(model => model.Province)
        @Html.HiddenFor(model => model.City)
        @Html.HiddenFor(model => model.District)
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.StoppageTime)
            </td>
            <td colspan="3">
                @Html.TextBoxFor(model => model.StoppageTime, new { onfocus = "WdatePicker()", @class = "combo textBoxHeight" })
            </td>
            <td></td>
            <td></td>
        </tr>
    }
    <tr>
        <td colspan="4"><a class="easyui-linkbutton" href="javascript:void(0)" onclick="Search()">查询故障</a></td>
    </tr>
</table>

<table id="result" class="easyui-datagrid" title="故障信息" style="width: 1000px; height: auto"
    data-options="singleSelect:true,collapsible:true,url:'/Stoppage/Search',method:'post',rownumbers:'true',pagination:'true'">
    <thead>
        <tr>
            <th data-options="field:'pass',width:60,formatter:pass">查看详细</th>
            <th data-options="field:'del',width:60,formatter:del">删除</th>

            <th data-options="field:'DeviceName',formatter:formatName,width:80">设备名称</th>
            <th data-options="field:'DeviceModel',formatter:formatModel,width:100">设备型号</th>
            <th data-options="field:'DeviceBarcode',formatter:formatBarcode,width:100">条形码</th>
            <th data-options="field:'DeviceCompany',formatter:formatCompany,width:100">所在公司</th>
            <th data-options="field:'DeviceDistrict',formatter:formatDistrict,width:100">所在区（县）</th>
            <th data-options="field:'DeviceCity',formatter:formatCity,width:100">所在城市</th>
            <th data-options="field:'DeviceProvince',formatter:formatProvince,width:100">所在省份</th>
            <th data-options="field:'StoppageTime',width:100">故障时间</th>
            <th data-options="field:'Description',width:100">故障描述</th>
            <th data-options="field:'RepairPeople',width:100">维修人员</th>
            <th data-options="field:'RepairTime',width:100">维修时间</th>




        </tr>
    </thead>
</table>
<a class="easyui-linkbutton" href="javascript:void(0)" onclick="exportExcel()">导出报表</a>
<a class="easyui-linkbutton" href="javascript:void(0)" onclick="print()">在线打印</a>
@UIHelper.ExportExcel("Stoppage")
@UIHelper.Print("Stoppage")
<script>
    function pass(val, row) {
        return "<a onclick=\"passConfirm(" + row.Id + ")\" href=\"javascript:void(0)\">查看详细</a>";
    }
    function del(val, row) {
        return "<a onclick=\"delConfirm(" + row.Id + ")\" href=\"javascript:void(0)\">删除</a>";
    }
    function passConfirm(id) {
        window.location.href = "/Stoppage/Details/" + id;
    }
    function delConfirm(id) {
        $.messager.confirm('确认', '您确定要删除吗？', function (r) {
            if (r) {
                window.location.href = "/Stoppage/Delete/" + id;
            }
        });
    }
</script>
