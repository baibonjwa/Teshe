@model Teshe.Models.Scrap

@{
    ViewBag.Title = "报废信息修改";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)
    <div class="row">
        <div class="form-group col-sm-4">
            @Html.DisplayNameFor(model => model.Device.Name)：
            @Html.DisplayFor(model => model.Device.Name)
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-4">
            @Html.LabelFor(model => model.Description)
            @Html.TextBoxFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-4">
            @Html.LabelFor(model => model.ScrapTime)
            @Html.TextBoxFor(model => model.ScrapTime, new { onfocus = "WdatePicker()" })
            @Html.ValidationMessageFor(model => model.ScrapTime)
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-4">
            <input type="submit" value="保存修改" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
